# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin (for API routes)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# Optional: Vertex AI (for production RAG)
GOOGLE_CLOUD_PROJECT=your_gcp_project
VERTEX_AI_LOCATION=us-central1

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=EthicalAI KB

# API Security
# Generate a secure random key: openssl rand -hex 32
API_SECRET_KEY=your_secure_api_key_here

# Comma-separated list of allowed origins for CORS
# Include your production domain and localhost for development
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Enable API request logging (set to 'true' to enable)
ENABLE_API_LOGGING=true
